---
const { dir, name, dimensions } = Astro.props;

const width = dimensions.width * dimensions.scale;
const height = dimensions.height * dimensions.scale;
---

<main>
  <canvas
    class="demo"
    id="canvas"
    oncontextmenu="event.preventDefault()"
    style={`width: ${width}px; height: ${height}px;`}></canvas>
</main>
<script type="text/javascript" is:inline>
  var Module = {
    preRun: [],
    postRun: [],
    print: (function () {
      return function (text) {
        text = Array.prototype.slice.call(arguments).join(" ");
        console.log(text);
      };
    })(),
    printErr: function (text) {
      text = Array.prototype.slice.call(arguments).join(" ");
      console.error(text);
    },
    canvas: (function () {
      var canvas = document.getElementById("canvas");
      canvas.addEventListener(
        "webglcontextlost",
        function (e) {
          alert("FIXME: WebGL context lost, please reload the page");
          e.preventDefault();
        },
        false,
      );
      return canvas;
    })(),
    setStatus: function (text) {},
    monitorRunDependencies: function (left) {},
  };
  window.onerror = function (event) {
    console.log("onerror: " + event.message);
  };
</script>
<script type="text/javascript" is:inline>
  var Module = {
    locateFile: function (path) {
      const scripts = document.getElementsByTagName('script');
      const thisScript = scripts[scripts.length - 1];
      const basePath = thisScript.src.substring(0, thisScript.src.lastIndexOf('/') + 1);

      if (path.endsWith('.data')) return basePath + path;
      return path;
    }
  };
</script>
<!-- <script type="text/javascript" src={`${dir}/${name}/assets.js`} async is:inline
></script> -->
<script type="text/javascript" src={`${dir}/${name}/${name}.js`} async is:inline
></script>
<style>
  .demo {
    margin-right: auto;
    margin-left: auto;
    border: 0;
    overflow: hidden;
    display: block;
    image-rendering: optimizeSpeed;
    image-rendering: -moz-crisp-edges;
    image-rendering: -o-crisp-edges;
    image-rendering: -webkit-optimize-contrast;
    image-rendering: optimize-contrast;
    image-rendering: crisp-edges;
    image-rendering: pixelated;
    -ms-interpolation-mode: nearest-neighbor;
  }
</style>
