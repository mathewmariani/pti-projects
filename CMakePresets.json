{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "desktop-debug",
            "displayName": "Desktop Debug",
            "generator": "Ninja Multi-Config",
            "binaryDir": "build/desktop-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "desktop-release",
            "displayName": "Desktop Release",
            "generator": "Ninja Multi-Config",
            "binaryDir": "build/desktop-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "web-debug",
            "displayName": "Web Debug",
            "generator": "Ninja Multi-Config",
            "binaryDir": "build/web-debug",
            "toolchainFile": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "web-release",
            "displayName": "Web Release",
            "generator": "Ninja Multi-Config",
            "binaryDir": "build/web-release",
            "toolchainFile": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}